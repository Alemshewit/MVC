@model Patients_Donors.Models.Donor
@{
    ViewBag.Title = "Patient Form";
}

<h2>Donors Form</h2>
<form action="@Url.Action("Index", "Donors")" method ="post">
    <div>
        @Html.LabelFor(x => x.)
        @Html.TextBoxFor(x => x.DonorName)
    </div>
    <div>
        @Html.LabelFor(x => x.DonorBloodGroup)
        @Html.TextBoxFor(x => x.DonorBloodGroup)
    </div>
    <div>
        @Html.LabelFor(x => x.DonorAddress)
        @Html.TextBoxFor(x => x.DonorAddress)
    </div>
</form>
@section Srcripts{
    @Scripts.Render("~/bundles/jQueryval")
}
